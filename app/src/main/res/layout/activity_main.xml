<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:paddingTop="4dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/ll_bg_dialog_copy"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/qqNum"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=" QQ:771565824"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:drawableLeft="@mipmap/bg_dialog_qq_s"
            />

        <TextView
            android:id="@+id/copy_qq"
            android:layout_marginLeft="10dp"
            android:text="复制"
            android:textColor="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_go_qq_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:src="@mipmap/bg_dialog_go_qq_group"
        android:textColor="@android:color/holo_blue_light" />

</RelativeLayout>